<h2>Doctor: <%= @doctor.name %></h2>
<p>Specialty: <%= @doctor.specialty %></p>
<p>Education: <%= @doctor.university %></p>
<p>Hospital: <%= @doctor.hospital.name %></p><br>

<section id="patients">
<h3>Patients:</h3>
  <% @doctor.patients.each do |patient| %>
  <section id="patient-<%= patient.id %>">
    <p><%= patient.name %>
    <%= link_to "remove patient", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete %></p>
  </section>
  <% end %>
</section>